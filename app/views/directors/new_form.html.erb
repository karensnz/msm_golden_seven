<div class="page-header">
  <h1>Add Director</h1>
</div>

<form action="/create_director" class="form-horizontal">

  <div class="form-group">
    <label for="dob" class="col-sm-2 control-label">
      Dob
    </label>
    <div class="col-sm-10">
      <input type="text" id="dob" name="dob" placeholder="Dob">
    </div>
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name">
    </div>
  </div>

  <div class="form-group">
    <label for="bio">
      Bio
    </label>
    <div class="col-sm-10">
      <textarea id="bio" name="bio" placeholder="Bio" rows="3">
      </textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="image_url">
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="image_url" placeholder="Image url">
    </div>
  </div>

  <div>
    <div>
      <input type="submit" value="Create Director">
    </div>
  </div>
</form>
